 &control
    calculation = 'scf',
    verbosity = 'high',
    outdir = './',
    prefix = 'pwscf',
    pseudo_dir = './'
 /
 &system
    ibrav=2, celldm(1) =10.244,
    nat=2, ntyp=2,
    ecutwfc=50.0,
    nbnd=24,
    noncolin = .true.,
    lspinorb = .true.,
    starting_magnetization(1) = 1.0,
    starting_magnetization(2) = -1.0,
    nosym = .true.,
    noinv = .true.,
    no_t_rev = .true.,
    force_symmorphic=.true.,
    occupations='smearing',
    smearing='fermi-dirac',
    degauss=0.0001
 /
 &electrons
    conv_thr=1e-10,
 /
ATOMIC_SPECIES
 Si1   0.0  Si_ONCV_PBE_FR-1.1.upf 
 Si2   0.0  Si_ONCV_PBE_FR-1.1.upf 
ATOMIC_POSITIONS {alat}
 Si1 0.00 0.00 0.00
 Si2 0.250 0.250 0.250
K_POINTS {automatic}
 2 2 2 0 0 0
