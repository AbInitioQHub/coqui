 &control
    calculation = 'scf',
    verbosity = 'high',
    outdir = './',
    prefix = 'pwscf',
    pseudo_dir = './'
 /
 &system
    ibrav=2, celldm(1) =10.244,
    nat=2, ntyp=1,
    ecutwfc=50.0,
    nbnd=8,
    nosym = .true.,
    noinv = .true.,
    no_t_rev = .true.,
    force_symmorphic=.true.,
    occupations='smearing',
    smearing='fermi-dirac',
    degauss=0.0001,
    input_dft='lda'
 /
 &electrons
    conv_thr=1e-10,
 /
ATOMIC_SPECIES
 Si   0.0  Si_ONCV_PBE_sr.upf
ATOMIC_POSITIONS {alat}
 Si 0.00 0.00 0.00
 Si 0.250 0.250 0.250
K_POINTS {automatic}
 1 1 1 0 0 0
